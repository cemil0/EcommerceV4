@model ECommerce.Application.DTOs.CartDto?

@{
    ViewData["Title"] = "Sepetim";
}

<div class="container mt-4">
    <h2>Sepetim</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.CartItems.Any())
    {
        <div class="alert alert-info">
            <h4>Sepetiniz boş</h4>
            <p>Alışverişe başlamak için <a href="/Products">ürünlere göz atın</a>.</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Ürün</th>
                                    <th>Birim Fiyat</th>
                                    <th>Miktar</th>
                                    <th>Toplam</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.ProductName</strong><br />
                                            <small class="text-muted">@item.VariantName</small>
                                        </td>
                                        <td>@item.UnitPrice.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                                        <td>
                                            <form method="post" asp-action="UpdateQuantity" class="d-inline">
                                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                                <div class="input-group" style="width: 150px;">
                                                    <button type="submit" name="quantity" value="@(item.Quantity - 1)" class="btn btn-sm btn-outline-secondary">-</button>
                                                    <input type="number" class="form-control form-control-sm text-center" value="@item.Quantity" readonly />
                                                    <button type="submit" name="quantity" value="@(item.Quantity + 1)" class="btn btn-sm btn-outline-secondary">+</button>
                                                </div>
                                            </form>
                                        </td>
                                        <td><strong>@item.TotalPrice.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</strong></td>
                                        <td>
                                            <form method="post" asp-action="RemoveItem" class="d-inline">
                                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bu ürünü sepetten çıkarmak istediğinize emin misiniz?')">
                                                    <i class="bi bi-trash"></i> Sil
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="mt-3">
                    <form method="post" asp-action="Clear" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Sepeti temizlemek istediğinize emin misiniz?')">
                            <i class="bi bi-trash"></i> Sepeti Temizle
                        </button>
                    </form>
                    <a href="/Products" class="btn btn-outline-primary ms-2">
                        <i class="bi bi-arrow-left"></i> Alışverişe Devam Et
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Sipariş Özeti</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Ara Toplam:</span>
                            <strong>@Model.TotalAmount.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>KDV (%20):</span>
                            <strong>@((Model.TotalAmount * 0.20m).ToString("C", new System.Globalization.CultureInfo("tr-TR")))</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Kargo:</span>
                            <strong>50,00 ₺</strong>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Toplam:</strong>
                            <strong class="text-primary">@((Model.TotalAmount * 1.20m + 50).ToString("C", new System.Globalization.CultureInfo("tr-TR")))</strong>
                        </div>

                        <button class="btn btn-success w-100 mb-2" disabled>
                            <i class="bi bi-credit-card"></i> Ödemeye Geç
                        </button>
                        <small class="text-muted">* Ödeme özelliği yakında eklenecek</small>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        <h6><i class="bi bi-truck"></i> Ücretsiz Kargo</h6>
                        <p class="small text-muted mb-0">1.000 ₺ ve üzeri alışverişlerde kargo ücretsiz!</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
